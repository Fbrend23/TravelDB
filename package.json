{
  "name": "traveldb",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -k -n BACKEND,FRONTEND \"npm --workspace backend run dev\" \"npm --workspace frontend run dev\"",
    "dev:api": "npm --workspace backend run dev",
    "dev:web": "npm --workspace frontend run dev",
    "lint": "npm-run-all --parallel lint:*",
    "lint:api": "npm --workspace backend run lint || true",
    "lint:web": "npm --workspace frontend run lint || true"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "npm-run-all": "^4.1.5"
  }
}
